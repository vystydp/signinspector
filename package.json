{
  "name": "@signinspector/core",
  "version": "0.1.0",
  "description": "Client-side PDF digital signature validator for BankID.cz, EU Trusted List (eIDAS), PKCS#7/CMS, and PAdES signatures using Web Crypto API",
  "type": "module",
  "keywords": [
    "pdf-signature",
    "digital-signature",
    "signature-validation",
    "bankid",
    "bankid-cz",
    "eidas",
    "eu-trusted-list",
    "pkcs7",
    "pades",
    "cms",
    "x509",
    "certificate-validation",
    "web-crypto",
    "client-side",
    "pdf",
    "pki",
    "typescript",
    "svelte",
    "security"
  ],
  "license": "MIT",
  "author": "Petr Vystyd <vystydp@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/vystydp/signinspector.git"
  },
  "bugs": {
    "url": "https://github.com/vystydp/signinspector/issues"
  },
  "homepage": "https://signinspector.app",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm run build:app && pnpm run build:types && pnpm run doc",
    "build:app": "vite build",
    "build:lib": "pnpm run build:types && vite build --config vite.config.lib.ts",
    "build:types": "tsc --project tsconfig.json",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "lint": "eslint . --ext .js,.cjs,.ts,.svelte --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.cjs,.ts,.svelte --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:all": "pnpm run lint && pnpm run fmt:check && pnpm run check && pnpm run test",
    "doc": "typedoc src/lib/index.ts --out static/docs",
    "doc:check": "typedoc src/lib/index.ts --out static/docs --emit none",
    "release": "standard-version",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "husky": "^8.0.3",
    "jsdom": "25.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "standard-version": "^9.5.0",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.4.1",
    "asn1js": "^3.0.6",
    "pkijs": "^3.3.3",
    "pvtsutils": "^1.3.6",
    "pvutils": "^1.1.5"
  }
}
